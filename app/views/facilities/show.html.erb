<%= render 'layouts/header' %>

<div class='container-fluid px-5'>
  <div class='row'>
    <div class='col-9'>
      <h2 class="mt-3">施設情報</h2>
      <table class="table table-striped table-bordered table-hover mt-3">
        <tr>
          <th>施設名</th>
          <td><%= @facility.name %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @facility.postcode %></td>
        </tr>
        <tr>
          <th>施設住所</th>
          <td><%= @facility.pref.name %><%= @facility.address_city %><%= @facility.address_street %><%= @facility.address_building %></td>
        </tr>
        <tr>
          <th>施設ジャンル</th>
          <td><%= I18n.t("enums.facility.genre.#{@facility.genre}") %></td>
        </tr>
        <tr>
          <th>施設責任者</th>
          <td><%= @facility.responsible_person %></td>
        </tr>
        <tr>
          <th>営業担当者</th>
          <td><%= @facility.employee.name %></td>
        </tr>
        <tr>
          <th>案件名</th>
          <td>
            <% @facility.items.where(status:1).each do |item| %>
              <%= item.title %>
            <% end %>
          </td>
        </tr>
      </table>
      <%= link_to facilities_path do %>
        <button class="btn btn-success">一覧に戻る</button>
      <% end %>
      <% if @facility.employee_id == current_employee.id %>
        <%= link_to edit_facility_path(@facility.id) do %>
        　<button class="btn btn-primary">編集する</button>
      　<% end %>
      <% end %>
    </div>
  </div>
</div>
