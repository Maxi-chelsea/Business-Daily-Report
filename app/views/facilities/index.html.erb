<div class="container-fluid px-5">
  <div class="row">
    <div class="col m-5 p-5">
      <h2 class="mt-3 mb-4">施設一覧</h2>
      <div class="mt-4">
        <%= search_form_for @q, url: search_facilities_path do |f| %>
          <%= f.label :name_cont, '施設名', {class: 'lead m-3'} %>
          <%= f.search_field :name_cont, {class: 'm-3'} %>
          <%= f.submit '検索', class: "m-3 pr-3 pl-3 btn btn-light btn-sm" %>
        <% end %>
        <label class="m-3 font-weight-bold">
          <%= link_to '新規作成', new_facility_path, class: 'text-white' %>
        </label>
        <table class="table table-bordered table-striped table-hover">
          <thead class="thead-dark">
            <tr>
              <th scope="col", class="p-4">施設名</th>
              <th scope="col", class="p-4">施設状況</th>
              <th scope="col", class="p-4">施設ジャンル</th>
              <th scope="col", class="p-4">登録案件名</th>
            </tr>
          </thead>
          <% @facilities.each do |facility| %>
            <tbody>
              <tr>
                <td scope="row", class="p-4">
                  <%= link_to facility.name, facility_path(facility.id), class: 'text-white' %>
                </td>
                <td scope="row", class="p-4"><%= facility.is_closed %></td>
                <td scope="row", class="p-4"><%= I18n.t("enums.facility.genre.#{facility.genre}") %></td>
                <td scope="row", class="p-4"><%= facility.activ_item_titles %></td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>