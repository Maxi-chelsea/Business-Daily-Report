<div class="container-fluid px-5">
  <div class="row">
    <div class="col m-5 p-5">
      <h2 class="mt-5 mb-4">施設一覧</h2>
      <div class="mt-4">
        <%= search_form_for @q, url: search_facilities_path do |f| %>
          <%= f.label :name_cont, '施設名' %>
          <%= f.search_field :name_cont %>
          <%= f.submit '検索' %>
        <% end %>
        <label class="font-weight-bold">
          <%= link_to new_facility_path do %>
            <p class="mt-3 text-white">新規作成</p>
          <% end %>
        </label>
        <table class="table table-bordered table-striped table-hover">
          <thead class="thead-dark">
            <tr>
              <th>施設名</th>
              <th>施設状況</th>
              <th>施設ジャンル</th>
              <th>登録案件名</th>
            </tr>
          </thead>
          <% @facilities.each do |facility| %>
            <tbody>
              <tr>
                <td>
                  <%= link_to facility.name, facility_path(facility.id), class: 'text-white' %>
                </td>
                <td><%= facility.is_closed %></td>
                <td><%= I18n.t("enums.facility.genre.#{facility.genre}") %></td>
                <td><%= facility.activ_item_titles %></td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>