<div class="container-fluid px-5">
  <div class='row'>
    <div class='col align-self-center'>
      <h2 class="mt-3">施設新規登録</h2>
      <h2 class="mt-5 mb-5">施設新規登録</h2>
      <%= form_with model:@facility, local:true do |f| %>
        <table class="table table-striped table-bordered table-hover mt-3">
          <tr>
            <th class="p-3">施設名</th>
            <td><%= f.text_field :name, size: 80 %></td>
          </tr>
          <tr>
            <th id="postcode" name="postalcode" class="p-3 "><%= f.label :postalcode, "郵便番号" %></th>
            <td><%= f.text_field :postalcode, autocomplete: 'postalcode', size: 80 %></td>
          </tr>
          <tr>
            <th id="address" name="address" class="p-3 "><%= f.label :address, "住所" %></th>
            <td><%= f.text_field :address, autocomplete: 'address', size: 80 %></td>
          </tr>

          <tr>
            <th class="p-3 ">施設ジャンル</label></th>
            <td><%= f.select  :genre, Facility.genres.map {|k,v| [I18n.t("enums.facility.genre.#{k}"), v]} %></td>
          </tr>
          <tr>
            <th class="p-3 ">施設責任者</label></th>
            <td><%= f.text_field :responsible_person, size: 80 %></td>
          </tr>
        </table>
        <%= f.submit "作成完了", class: "mt-3 mb-5 btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>


