<%= render 'layouts/header' %>

<div class="container-fluid px-5">
  <div class='row'>
    <!--通知機能の部分テンプレート-->
    <div class='col-2 mr-1'>
      <%= render 'employees/message' %>
      <%= render 'employees/comment' %>
      <%= render 'employees/favorite' %>
    </div>
    <div class='col align-self-center'>
      <h2 class="mt-3">施設新規登録</h2>
      <%= form_with model:@facility, local:true do |f| %>
        <table class="table table-striped table-bordered table-hover mt-3">
          <tr>
            <th class="p-3">施設名</th>
            <td><%= f.text_field :name, size: 80 %></td>
          </tr>
          <tr>
            <th id="postcode" name="postcode" class="p-3 "><%= f.label :postcode, "郵便番号" %></th>
            <td><%= f.text_field :postcode, autocomplete: 'postcode', size: 80 %></td>
          </tr>
          <tr>
            <th id="prefecture_code" name="prefecture_code" class="p-3 "><%= f.label :prefecture_name, "都道府県" %></th>
            <td><%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' }, class: 'form-control' %></td>
          </tr>
          <tr>
            <th id="address_city" name="address_city" class="p-3 "><%= f.label :address_city, "市区町村" %></th>
            <td><%= f.text_field :address_city, autocomplete: 'address_city', size: 80 %></td>
          </tr>
          <tr>
            <th class="p-3 "><%= f.label :address_street, "番地" %></th>
            <td><%= f.text_field :address_street, autocomplete: 'address_street', size: 80 %></td>
          </tr>
          <tr>
            <th class="p-3 "><%= f.label :address_building, "建物" %></th>
            <td><%= f.text_field :address_building, autocomplete: 'address_building', size: 80 %></td>
          </tr>
          <tr>
            <th class="p-3 ">施設ジャンル</label></th>
            <td><%= f.select  :genre, Facility.genres.map {|k,v| [I18n.t("enums.facility.genre.#{k}"), v]} %></td>
          </tr>
          <tr>
            <th class="p-3 ">施設責任者</label></th>
            <td><%= f.text_field :responsible_person, size: 80 %></td>
          </tr>
        </table>
        <%= f.submit "作成完了" %>
      <% end %>
    </div>
  </div>
</div>