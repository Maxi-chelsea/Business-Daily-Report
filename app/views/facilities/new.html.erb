<%= render 'layouts/header' %>

<div class="container-fluid px-5">
  <div class='row'>
    <div class='col-2 mr-1'>
      <%= render 'employees/message' %>
      <%= render 'employees/comment' %>
      <%= render 'employees/favorite' %>
    </div>
    <div class='col'>
      <h2 class="mt-3">施設新規登録</h2>
      <%= form_with model:@facility, local:true do |f| %>
        <table>
          <tr>
            <th class="p-3">施設名</label></th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th class="p-3 ">郵便番号</label></th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th class="p-3 ">住所</label></th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th class="p-3 ">施設ジャンル</label></th>
            <td><%= f.select  :genre, Facility.genres.map {|k,v| [I18n.t("enums.facility.genre.#{k}"), v]} %></td>
          </tr>
          <tr>
            <th class="p-3 ">施設責任者</label></th>
            <td><%= f.text_field :responsible_person %></td>
          </tr>
        </table>
        <%= f.submit "作成完了" %>
      <% end %>
    </div>
  </div>
</div>