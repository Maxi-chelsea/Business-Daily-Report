<%= render 'layouts/header' %>

<body class="top-body">
  <div class="container my-5">
    <div class="row">
      <div class="col-12 offset-2 my-2">
        <h3>新規登録</h3>
      </div>
    </div>
    <%= flash[:error] %><br>
    <div class="row d-flex justify-content-center">
      <div class="col-xs-offset-1 col-xs-8">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <table class='table ini'>
            <tr class="field">
              <td><%= f.label :会社名 %></td>
              <td><%= f.text_field :company_name, autofocus: true, autocomplete: "company_name", :size => "40*30", class: "form-control border border-dark rounded" %></td>
            </tr>
            <tr class="field">
              <td><%= f.label :会社コード %></td>
              <td><%= f.text_field :company_code, autofocus: true, autocomplete: "company_code", :size => "40*30", class: "form-control border border-dark rounded" %></td>
            </tr>
            <tr class="field">
              <td><%= f.label :社員名 %></td>
              <td><%= f.text_field :name, autofocus: true, autocomplete: "name", :size => "40*30", class: "form-control border border-dark rounded" %></td>
            </tr>
            <tr class="field">
              <td><%= f.label :メールアドレス %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "40*30", class: "form-control border border-dark rounded" %></td>
            </tr>
            <tr class="field">
              <td><%= f.label :パスワード %></td>
              <td>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
              </td>
            </tr>
            <tr class="field">
              <td><%= f.label :パスワード再確認 %></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password", :size => "40*30", class: "form-control border border-dark rounded" %></td>
            </tr>
            <tr>
              <td><%= f.label :管理者権限 %></td>
              <td>
                <%= f.radio_button :admin, :"有効" %>
        	      <%= f.label :admin, "有効", {value: :true, style: "display: inline-block;"} %>
        	      <%= f.radio_button :admin, :"無効", {:checked => true} %>
        	      <%= f.label :admin, "無効", {value: :false, style: "display: inline-block;"} %>
              </td>
            </tr>
          </table>
          <div class="actions mb-5 d-flex justify-content-center">
            <%= f.submit "入力完了", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</body>

