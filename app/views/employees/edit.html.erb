<div class='container-fluid px-5'>
  <div class='row'>
    <div class='col-9 m-5 p-5'>
      <h2 class="mt-3 mb-5">情報編集</h2>
      <%= form_with model:@employee, local: true do |f| %>
        <table class="table table-striped table-bordered table-hover mt-3">
          <tr>
            <th class="p-4">会社コード</th>
            <td class="p-4"><%= @employee.company_code %></th>
          </tr>
          <tr>
            <th class="p-4">会社名</th>
            <td class="p-4"><%= @employee.company_name %></th>
          </tr>
          <tr>
            <th class="p-4">社員ID</th>
            <td class="p-4"><%= @employee.id %></td>
          </tr>
          <tr>
            <th class="p-4">社員名</th>
            <td class="p-4"><%= f.text_field :name, :size=>"40" %></td>
          </tr>
          <tr>
            <th class="p-4">メールアドレス</th>
            <td class="p-4"><%= f.text_field :email, :size=>"40" %></td>
          </tr>
          <tr>
            <th class="p-4">管理者権限</th>
            <td class="p-4">
              <% if employee_signed_in? && current_employee.admin == true %>
                <%= f.radio_button :admin, :"有効" %>
        	      <%= f.label :admin, "有効", {value: :true, style: "display: inline-block;"} %>
        	      <%= f.radio_button :admin, :"無効", {:checked => true} %>
        	      <%= f.label :admin, "無効", {value: :false, style: "display: inline-block;"} %>
      	      <% end %>
            </td>
          </tr>
          <tr>
            <th class="p-4">ステータス</th>
            <td class="p-4">
              <% if employee_signed_in? && current_employee.admin == true %>
                <%= f.radio_button :is_deleted, :"有効", {:checked => true} %>
      	        <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
      	        <%= f.radio_button :is_deleted, :"退職" %>
      	        <%= f.label :is_deleted, "退職", {value: :true, style: "display: inline-block;"} %>
      	      <% end %>
            </td>
          </tr>
        </table>
        <%= f.submit "編集完了", class: "mt-3 mb-5 mr-2 btn btn-success" %>
        <%= link_to '一覧に戻る', employees_path, class: "mt-3 mb-5 ml-2 btn btn-light" %>
      <% end %>
    </div>
  </div>
</div>