<div class="ccontainer-fluid px-5">
  <div class="row">
    <div class="col">
      <h2 class="mt-3">検索結果</h2>
      <h2 class="mt-5 mb-4">検索結果</h1>
      <table class="table table-bordered table-striped mt-3">
        <thead class="thead-dark">
          <tr>
            <th scope="col">ID</th>
            <th scope="col">社員名</th>
            <th scope="col">メールアドレス</th>
            <th scope="col">ステータス</th>
            <th scope="col"></th>
            <% if employee_signed_in? && current_employee.admin == true %>
              <th scope="col"></th>
            <% end %>
          </tr>
        </thead>
      
        <tbody>
          <% @results.each do |employee| %>
            <tr>
              <td scope="row"><%= employee.id %></td>
              <td scope="row"><%= employee.name %></td>
              <td scope="row"><%= employee.email %></td>
              <td scope="row"><%= employee.is_deleted %></td>
              <td scope="row">
                <%= link_to employee_messages_path(employee) do %>
                  メッセージ
                <% end %>
              </td>
              <% if employee_signed_in? && current_employee.admin == true %>
                <td scope="row">
                  <%= link_to edit_employee_path(employee.id) do %>
                    編集する
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to '社員一覧へ', employees_path %>
    </div>
  </div>
</div>


