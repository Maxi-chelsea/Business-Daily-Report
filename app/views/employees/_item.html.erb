<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>案件名</th>
      <th>施設名</th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %>
      <tr>
        <td>
          <%= link_to item.title, item_path(item) %>
        </td>
        <td><%= item.facility.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>