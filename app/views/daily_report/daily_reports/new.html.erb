<div class="container-fluid px-5">
  <div class="row">
    <div class="col align-self-center m-5 p-5">
      <h2 class="mt-3 mb-4">新規業務報告</h2>
      <%= form_with model:@daily_report, url: daily_reports_path, local:true do |f| %>
        <table class="table table-striped table-bordered table-hover mt-3">
          <tr>
            <th class="p-3">施設名</th>
            <td><%= f.select :facility_id, @facilities_hash, include_blank: "-----" %></td>
          </tr>
          <tr>
            <th class="p-3">タイトル</th>
            <td><%= f.text_field :title, size: 80 %></td>
          </tr>
          <tr>
            <th class="p-3">訪問時間</th>
            <td><%= f.datetime_select :time, {} %></td>
          </tr>
          <tr>
            <th class="p-3">面談者</th>
            <td><%= f.text_field :person, size: 80 %></td>
          </tr>
          <tr>
            <th class="p-3">面談内容</th>
            <td><%= f.text_area :content, size: "100x15" %></td>
          </tr>
        </table>
        <%= f.submit "作成完了", class: "mt-3 mb-5 btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>