<div class="container-fluid px-5">
  <div class="row">
    <div class="col m-5 p-5">
      <h2 class="mt-3 mb-4">業務報告一覧</h2>
      <%= search_form_for @q, url: search_daily_reports_path do |f| %>
        <%= f.label :title_cont, '報告名', {class: 'lead m-3'} %>
        <%= f.search_field :title_cont, {class: 'lead m-3'} %>
        <%= f.submit '検索', class: "m-3 pr-3 pl-3 btn btn-light btn-sm" %>
      <% end %>
      <label class="font-weight-bold">
        <%= link_to new_daily_report_path do %>
          <p class="mt-3 text-white">新規作成</p>
        <% end %>
      </label>
      <table class="table table-bordered table-striped">
        <thead class="thead-dark">
          <tr>
            <th scope="col", class="p-4">作成日</th>
            <th scope="col", class="p-4">社員名</th>
            <th scope="col", class="p-4">タイトル</th>
            <th colspan="2", scope="col", class="p-4">施設名</th>
          </tr>
        </thead>
        <% @daily_reports_all.each do |daily_report| %>
        <tbody>
          <tr>
            <td scope="row", class="p-4"><%= daily_report.created_at.to_s(:datetime_jp) %></td>
            <td scope="row", class="p-4"><%= daily_report.employee.name %></td>
            <td scope="row", class="p-4"><%= daily_report.title %></td>
            <td scope="row", class="p-4"><%= daily_report.facility.name %></td>
            <td scope="row", class="p-4">
              <%= link_to "詳細へ", daily_report_path(daily_report), class: "btn btn-primary" %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>