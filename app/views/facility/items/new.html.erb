<div class='container-fluid px-5'>
  <div class='row'>
    <div class='col align-self-center'>
      <h2 class="mt-5 mb-5">案件新規登録</h2>
      <%= form_with model:@item, url: items_path, local:true do |f| %>
        <table class="table table-striped table-bordered table-hover mt-3">
          <tr>
            <th class="p-3">施設名</th>
            <!--@facilities_hashに自身の担当施設を格納し、プルダウンで表示-->
            <td><%= f.select :facility_id, @facilities_hash, include_blank: "-----" %></td>
          </tr>
          <tr>
            <th class="p-3">案件名</th>
            <td><%= f.text_field :title, size: 80 %></td>
          </tr>
          <tr>
            <th class="p-3">案件ジャンル</th>
            <td>
              <%= f.radio_button :genre, :"新規", {:checked => true} %>
    	        <%= f.label :genre, "新規", {value: :true, style: "display: inline-block;"} %>
    	        <%= f.radio_button :genre, :"既存" %>
    	        <%= f.label :genre, "既存", {value: :false, style: "display: inline-block;"} %>
            </td>
          </tr>
          <tr>
            <th class="p-3">案件ステータス</th>
            <td><%= f.select :status, Item.statuses.keys, include_blank: "-----" %></td>
          </tr>
          <tr>
            <th class="p-3">案件内容</th>
            <td><%= f.text_area :content, size: "100x15" %></td>
          </tr>
        </table>
        <%= f.submit "作成完了", class: "mt-3 mb-5 btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>