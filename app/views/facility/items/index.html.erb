<div class="container-fluid px-5">
  <div class="row">
    <div class="col">
      <h2 class="mt-3">案件一覧</h2>
      <h2 class="mt-5">案件一覧</h2>
      <div class="mt-4">
        <%= search_form_for(@q, url:items_path) do |f| %>
        <%= f.label :案件名 %>
        <%= f.text_field :title_start %>
        <%= f.label :ステータス %>
        <%= f.text_field :status_start %>
        <%#= f.label :ジャンル %>
        <%#= f.text_field :genre_start %>
        <%= f.submit %>
      <% end %>
      <label class="font-weight-bold">
        <%= link_to new_item_path do %>
          <p class ="mt-3 text-white">案件新規作成</p>
        <% end %>
      </label>
      <table class="table table-bordered table-striped">
        <thead class="thead-dark">
          <tr>
            <th>担当者</th>
            <th>施設名</th>
            <th>案件ジャンル</th>
            <th>案件名</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
        <tbody>
          <tr>
            <td><%= item.employee.name %></td>
            <td><%= item.facility.name %></td>
            <td><%= item.genre %></td>
            <td>
              <%= link_to item.title, item_path(item.id), class: 'text-white' %>
            </td>
            <td><%= item.status %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
      </div>
    </div>
  </div>
</div>